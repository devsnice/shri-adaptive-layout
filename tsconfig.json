{
  "compilerOptions": {
    "noEmitOnError": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "docs/scripts",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "strict": false,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es7"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./server"]
}
